@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
<div class="container">
    <div class="row py-4">
        <div class="col-12 col-lg-6">
            <h2 class="text-primary mb-0">Category list</h2>
        </div>
        <div class="col-12 col-lg-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create a new category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <tr>
            <th>Category name</th>
            <th>Display order</th>
            <th></th>
        </tr>
        @foreach (var obj in Model.CategoryList)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <a asp-page="/Categories/edit" asp-route-id="@obj.Id" class="btn btn-primary">Edit</a>
                    <a asp-page="/Categories/delete" asp-route-id="@obj.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
