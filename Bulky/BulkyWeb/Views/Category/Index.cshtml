@model List<Category>

<div class="container"> 
    <div class="row py-4">
        <div class="col-12 col-lg-6">
            <h2 class="text-primary mb-0">Category list</h2>
        </div>
        <div class="col-12 col-lg-6 text-end">
            <a asp-controller="Category" asp-action="create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create a new category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <tr>
            <th>Category name</th>
            <th>Display order</th>
            <th></th>
        </tr>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>

